<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTheme1" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Custom colors as follows -->
        <item name="myCustomBackgroundColor">@color/red</item>
        <item name="myCustomColor1">@color/light_blue</item>
        <item name="myCustomColor2">@color/light_green</item>
        <!-- Window Animation Transition -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

